<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mobilevocabulary"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- <meta-data android:name="com.google.android.gms.version" -->
        <!-- android:value="@integer/google_play_services_version"/> -->
        <activity
            android:name="com.example.mobilevocabulary.activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.mobilevocabulary.activity.TopicSelectionActivity"
            android:label="@string/title_activity_topic_selection"
            android:parentActivityName="com.example.mobilevocabulary.activity.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.mobilevocabulary.activity.MainActivity" />
        </activity>
        <activity
            android:name="com.example.mobilevocabulary.activity.ExamMultipleChoiceSwipeActivity"
            android:label="@string/title_activity_multiple_choice_swipe" >
        </activity>
        <activity
            android:name="com.example.mobilevocabulary.activity.ResultActivity"
            android:label="@string/title_activity_result" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.mobilevocabulary.activity.MainActivity" />
        </activity>
        <!-- <activity android:name="com.google.android.gms.ads.AdActivity" -->
        <!-- android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"/> -->
        <activity
            android:name="com.example.mobilevocabulary.activity.LearnMultipleChoiceSwipeActivity"
            android:label="@string/title_activity_learn_multiple_choice_swipe" >
        </activity>
        <activity
            android:name="com.example.mobilevocabulary.activity.MultiChoiceManagerActivity"
            android:label="@string/title_activity_multi_choice_manager" >
        </activity>
        <activity
            android:name="com.example.mobilevocabulary.activity.MultiChoiceManagerActivity"
            android:label="@string/title_activity_multi_choice_manager" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- <uses-permission android:name="android.permission.INTERNET"/> -->
    <!-- <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/> -->

</manifest>